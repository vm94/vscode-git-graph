{
	"compilerOptions": {
		"lib": [
			"es6",
			"dom"
		],
		"module": "none",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "../media",
		"removeComments": true,
		"strict": true,
		"target": "es6" //es5 doesn't allow use of /u and /y regex flags
	}
}